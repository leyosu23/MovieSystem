    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(viewModel => viewModel.movie.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(viewModel => viewModel.movie.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(viewModel => viewModel.movie.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(viewModel => viewModel.movie.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(viewModel => viewModel.movie.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(viewModel => viewModel.movie.Genre)
        </dd>
        <dt class="col-sm-2">
