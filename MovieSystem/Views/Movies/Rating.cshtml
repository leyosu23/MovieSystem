@model MovieSystem.Models.Movie

@{
    ViewData["Title"] = "Rating";
}

<h1>Rating</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Rating" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="hidden" asp-for="Title" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ReleaseDate" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Genre" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Price" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Customer" />
            </div>
            <div class="form-group">
                <h4 class="mb-3">Please select one option:</h4>
                <input asp-for="Rating" type="radio" id="1" name="Rating" value="1">
                <label for="male" class="mr-3">1</label>
                <input asp-for="Rating" type="radio" id="2" name="Rating" value="2">
                <label for="female" class="mr-3">2</label>
                <input asp-for="Rating" type="radio" id="3" name="Rating" value="3">
                <label for="other" class="mr-3">3</label>
                <input asp-for="Rating" type="radio" id="4" name="Rating" value="4">
                <label for="other" class="mr-3">4</label>
                <input asp-for="Rating" type="radio" id="5" name="Rating" value="5">
                <label for="other" class="mr-3">5</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary mb-2" />
            </div>
        </form>
    </div>
</div>
<div>
    <a href='javascript:history.go(-1)'>Back to List</a>
</div>